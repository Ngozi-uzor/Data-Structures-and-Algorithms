        "\n",
        "# DAY 2: MAXIMUM SUBARRAY\n",
        "\n",
        "\"\"\"\n",
        "DAY 2: MAXIMUM SUBARRAY\n",
        "Problem: Given an integer array nums, find the subarray\n",
        "with the largest sum, and return its sum.\n",
        "\"\"\"\n",
        "def max_subarray(nums):\n",
        "    if not nums:\n",
        "        return 0\n",
        "\n",
        "    max_sum = current_sum = nums[0]\n",
        "\n",
        "    for num in nums[1:]:\n",
        "        current_sum = max(num, current_sum + num)\n",
        "        max_sum = max(max_sum, current_sum)\n",
        "\n",
        "    return max_sum\n",
        "\n",
        "# Test cases\n",
        "if __name__ == \"__main__\":\n",
        "    print(\"Day 2 - Maximum Subarray\")\n",
        "    print(\"Test 1:\", max_subarray([-2,1,-3,4,-1,2,1,-5,4]))  # 6\n",
        "    print(\"Test 2:\", max_subarray([1]))                      # 1\n",
        "    print(\"Test 3:\", max_subarray([5,4,-1,7,8]))            # 23\n",
        "    print(\"Test 4:\", max_subarray([-1]))                    # -1"
      ]
    }
  ]
}